<div class="container">
  <h1>All Events</h1>

  <% if current_user %>
    <%= link_to 'Create New Event', new_event_path %>
  <% end %>

  <ul class="mt-5">
  <% @events.each do |event| %>
    <p>
        <%=link_to event.name, event %> => (<%= event.description %>)
    </p>
  <% end %>
  </ul>
</div>

